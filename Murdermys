local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Workspace = game:GetService("Workspace")
local ESP_ENABLED = false
local AUTO_SHOOT_ENABLED = false
local AUTO_KILL_ENABLED = false
local AUTO_PICK_GUN_ENABLED = true
local SPEED_ENABLED = false
local SPEED_VALUE = 16

local Colors = {
    ["None"] = Color3.fromRGB(255, 255, 255),   -- Kh√¥ng c√≥ v≈© kh√≠
    ["Gun"] = Color3.fromRGB(0, 191, 255),      -- C√≥ s√∫ng
    ["Knife"] = Color3.fromRGB(255, 0, 0)       -- C√≥ dao
}

-- üéØ **Auto Pick Gun**
local function AutoPickGun()
    while AUTO_PICK_GUN_ENABLED do
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character then
                local hasGun = player.Character:FindFirstChild("Gun") or player.Backpack:FindFirstChild("Gun")

                if hasGun then
                    repeat task.wait() until not player.Character or not player.Character:FindFirstChild("Humanoid") or player.Character.Humanoid.Health <= 0
                    LocalPlayer.Character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame
                    task.wait(0.2)

                    if LocalPlayer.Backpack:FindFirstChild("Gun") or LocalPlayer.Character:FindFirstChild("Gun") then
                        if AUTO_SHOOT_ENABLED then spawn(AutoShoot) end
                    end
                end
            end
        end
        task.wait(1)
    end
end

-- üéØ **Auto Shoot**
local function AutoShoot()
    while AUTO_SHOOT_ENABLED do
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character then
                local hasKnife = player.Character:FindFirstChild("Knife") or player.Backpack:FindFirstChild("Knife")

                if hasKnife then
                    LocalPlayer.Character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame
                    task.wait(0.1)
                    if LocalPlayer.Character:FindFirstChild("Gun") then
                        LocalPlayer.Character.Gun:Activate()
                    end
                end
            end
        end
        task.wait(0.1)
    end
end

-- üéØ **Auto Kill**
local function AutoKill()
    while AUTO_KILL_ENABLED do
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character then
                LocalPlayer.Character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame
                task.wait(0.1)
                if LocalPlayer.Character:FindFirstChild("Knife") then
                    LocalPlayer.Character.Knife:Activate()
                end
            end
        end
        task.wait(0.1)
    end
end

-- üöÄ **T·∫°o UI v·ªõi Rayfield**
local Window = Rayfield:CreateWindow({ Name = "banh21 Hub" })
local Tab = Window:CreateTab("Main", 4483362458)

-- üéØ **ESP Roles Detection**
Tab:CreateToggle({
    Name = "ESP Roles Detection",
    CurrentValue = false,
    Callback = function(state)
        ESP_ENABLED = state
    end
})

-- üî´ **Auto Shoot**
Tab:CreateToggle({ Name = "Auto Shoot", CurrentValue = false, Callback = function(state)
    AUTO_SHOOT_ENABLED = state
    if AUTO_SHOOT_ENABLED then spawn(AutoShoot) end
end })

-- ‚öîÔ∏è **Auto Kill**
Tab:CreateToggle({ Name = "Auto Kill", CurrentValue = false, Callback = function(state)
    AUTO_KILL_ENABLED = state
    if AUTO_KILL_ENABLED then spawn(AutoKill) end
end })

-- üöÄ **Auto Pick Gun**
Tab:CreateToggle({ Name = "Auto Pick Gun", CurrentValue = true, Callback = function(state)
    AUTO_PICK_GUN_ENABLED = state
    if AUTO_PICK_GUN_ENABLED then spawn(AutoPickGun) end
end })

print("‚úÖ banh21 Hub ƒë√£ ƒë∆∞·ª£c c·∫≠p nh·∫≠t v·ªõi c√°c t√≠nh nƒÉng m·ªõi!")
